<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff2cc"
    tools:context=".Record.MicActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:background="#f9db22">
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="6dp"
            android:background="#f9db22"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            android:scaleType="fitStart"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="@font/seoulnamsan_bo"
            android:layout_gravity="center"
            android:text="음 성 전 달"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/record_btn"
            android:fontFamily="@font/bmjua_ttf"
            android:background="#F8CBAD"
            android:layout_width="200dp"
            android:textSize="25dp"
            android:text="녹음하기"
            android:textColor="#433a35"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/listmic_btn"
            android:layout_width="200dp"
            android:textSize="25dp"
            android:layout_alignParentRight="true"
            android:textColor="#433a35"
            android:fontFamily="@font/bmjua_ttf"
            android:text="불러오기"
            android:background="#F8CBAD"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_play_24dp"
            android:layout_height="wrap_content">
        </ImageButton>
        <ImageButton
            android:id="@+id/btnStop"
            android:layout_toRightOf="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause_black_24dp"
        />
        <SeekBar
            android:id="@+id/pbMP3"
            android:layout_marginTop="12dp"
            android:layout_width="150dp"
            android:layout_toRightOf="@+id/btnStop"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/pbMP3"
            android:fontFamily="@font/bmjua_ttf"
            android:gravity="center"
            android:text="00:00"
            android:textSize="18dp"
            android:textColor="#433a35" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보내기"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:background="#F8CBAD"
            android:textColor="#433a35"
            android:fontFamily="@font/bmjua_ttf"
            android:onClick="onClick"
            android:id="@+id/mp3btn"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="소연아 밥먹자"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/seoulnamsan_bo"
            android:id="@+id/tvMp3"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:fontFamily="@font/seoulnamsan_bo"
            android:visibility="gone"
            android:id="@+id/listclose"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/micLinear"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/Swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
            android:id="@+id/listViewMp3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:visibility="invisible"></ListView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</LinearLayout>